.droplist
  %ol.level1
    - @parents.each do |parent|
      %li.parent__list
        %a.list--name{href: "#"}
          = parent.name      
          %ol.level2
            - parent.children.each do |child|
              %li.child__list
                %a.list--name{href: "#"}
                  = child.name
                  %ol.level2
                    - child.children.each do |grandchild|
                      %li.grandchild__list
                        %a.list--name{href: "#"}
                          = grandchild.name