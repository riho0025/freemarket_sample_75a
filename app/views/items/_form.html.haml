= form_for @item , html: {id: "item-dropzone"} do |f|
  = f.hidden_field :trading_status, value: "販売中"
  -# = f.hidden_field :user_id, value: current_user.id
  .upload-box
    .upload-box__head
      %h3.bigger 出品画像
      %span 必須
    %p.discription 最大10枚までアップロードできます

    
    = f.fields_for :images do |image|
      .dropzone-container
        #preview
        .dropzone-area
          = image.label :image, class: "dropzone-box", for: "upload-image" do
            .input_area
              = image.file_field :image, multiple: true, name: 'item_images[image][]', id: "upload-image", class: "upload-image", 'data-image': 0
            %p ここをクリックしてください
      .dropzone-container
        #preview2
        .dropzone-area2
          = image.label :image, class: "dropzone-box", for: "upload-image" do
            %p ここをクリックしてください
  %hr.content-sale--hr
  .content-sale__main__box__form
    .content-sale__main__box__form__item
      .content-sale__main__box__form__inner__title
        %label
          商品名
        %span
          必須
      .content-sale__main__box__form__item__box
        .content-sale__main__box__form__item__box__input
          = f.text_field :name, placeholder:"商品名（必須 40文字まで)",class: "input"

    .content-sale__main__box__form__intro
      .content-sale__main__box__form__inner__title
        %label
          商品の説明
        %span
          必須
      .content-sale__main__box__form__inner__intro
        = f.text_area :description, class: "items-new-form-area__default", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "7"
        .content-sale__main__box__form__inner__intro__bottom
          %span 0/1000

  %hr.content-sale--hr
  .content-sale__main__box__form
    %p
      商品の詳細
    .item-dteil
      .item-detail__inner
        .item-detail__inner__name
          %label
            カテゴリー
          %span
            必須
        .item-detail__inner__box
          .item-detail__inner__box__select
            = f.collection_select :category_id, Category.all.limit(13), :id, :name,{prompt:"---"},{class:"", id: ""}
    .item-detail
      .item-detail__inner
        .item-detail__inner__name
          %label.item-detail__inner__name__down
            ブランド
          %span.optional
            任意
        .item-detail__inner__brand
          .item-detail__inner__brand__inner
            = f.collection_select :brand_id, Brand.all.limit(13), :id, :name,{prompt:"---"},{class:"", id: ""}
    .item-detail
      .item-detail__inner
        .item-detail__inner__name    
          %label.item-detail__inner__name__down
            商品の状態
          %span.require
            必須
        .item-detail__inner__box
          .item-detail__inner__box__select
            = f.select :status, [["選択してください", "null"], ["新品、未使用", "新品、未使用"], ["目立った傷や汚れなし", "目立った傷や汚れなし"], ["目立った傷や汚れあり", "目立った傷や汚れあり"], ["全体的に状態が悪い", "全体的に状態が悪い"]]

  %hr.content-sale--hr
  .content-sale__main__box__form
    %p
      配送料について
      = link_to "#" do
        = icon('far', 'question-circle', class: 'question')
    .item-dteil
      .item-detail__inner
        .item-detail__inner__name
          %label
            配送料の負担
          %span
            必須
        .item-detail__inner__box
          .item-detail__inner__box__select
            = f.select :delivery_burden, [["選択してください", "null"], ["送料込み（出品者負担）", "送料込み（出品者負担）"], ["着払い（購入者負担）", "着払い（購入者負担）"]]
    .item-dteil
      .item-detail__inner
        .item-detail__inner__name
          %label.item-detail__inner__name__down
            配送元の地域
          %span.require
            必須
        .item-detail__inner__box
          .item-detail__inner__box__select
            = f.select :delivery_area, [["選択してください", "null"], ["北海道", "北海道"], ["青森", "青森"], ["岩手", "岩手"], ["宮城", "宮城"], ["秋田", "秋田"], ["山形", "山形"], ["福島", "福島"], ["茨城", "茨城"], ["群馬", "群馬"], ["埼玉", "埼玉"], ["千葉", "千葉"], ["東京", "東京"], ["神奈川", "神奈川"], ["新潟", "新潟"], ["富山", "富山"], ["石川", "石川"], ["福井", "福井"], ["山梨", "山梨"], ["岐阜", "岐阜"], ["静岡", "静岡"], ["愛知", "愛知"], ["三重", "三重"], ["滋賀", "滋賀"], ["京都府", "京都府"], ["大阪府", "大阪府"], ["奈良", "奈良"], ["和歌山", "和歌山"], ["鳥取", "鳥取"], ["島根", "島根"], ["岡山", "岡山"], ["広島", "広島"], ["山口", "山口"], ["徳島", "徳島"], ["香川", "香川"], ["愛媛", "愛媛"], ["高知", "高知"], ["福岡", "福岡"], ["佐賀", "佐賀"], ["長崎", "長崎"], ["熊本", "熊本"], ["大分", "大分"], ["宮崎", "宮崎"], ["鹿児島", "鹿児島"], ["沖縄", "沖縄"]]
    .item-dteil
      .item-detail__inner
        .item-detail__inner__name
          %label.item-detail__inner__name__down
            発送までの日数
          %span.require
            必須
        .item-detail__inner__box
          .item-detail__inner__box__select
            = f.select :delivery_days, [["選択してください", "null"], ["1~2日で発送", "1~2日で発送"], ["2~3日で発送", "2~3日で発送"], ["4~7日で発送", "4~7日で発送"]]

  %hr.content-sale--hr
  .content-sale__main__box__form
    %p
      価格（¥300〜9,999,999）
      = link_to "#" do
        = icon('far', 'question-circle', class: 'question')
    .price
      .price__box
        .price__box__name
          .price__box__name__inner
            %label
              販売価格
            %span
              必須
        %span
          ¥
        .price__box__input
          .price__box__input__inner
            = f.number_field :price, min:300, max:9999999, class: "input", id: "sell-price", placeholder: "例）300", value: ""
      .price__box__fee
        .price__box__fee__inner
          .price__box__fee__inner__title
            販売手数料（１０％）
        %span
          #furima_fee
    %hr.content-sale--hr      
    .price__box
      .price__box__revenue
        販売利益
      %span
        #revenue
  .btn
    =f.submit "出品する",class:"btn__listing"
    =link_to "もどる",items_path
  .warning
    %p
      禁止されている
    = link_to "#" do
      行為
    %p
      および
    = link_to "#" do
      出品物
    %p
      を必ずご確認ください。
    = link_to "#" do
      偽ブランド品
    %p
      や
    = link_to "#" do
      盗品物
    %p
      などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして
    = link_to "#" do
      加盟店規約
    %p
      に同意したことになります。