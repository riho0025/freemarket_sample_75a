            .header-detail__contents__nav-list__right__new
              %li 
                =link_to user_path(current_user[:id]) do
                  マイページ     
          -else
            .header-detail__contents__nav-list__right__login
              %li
                =link_to new_user_session_path do
                  ログイン
              
            .header-detail__contents__nav-list__right__new
              %li 
                =link_to home_index_path do
                  新規登録      
